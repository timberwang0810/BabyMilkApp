<div class="col s4">
    <div class="card">
    <div class="card-content">
        <span class="card-title">All Bottles for <%= @patient.proper_name %></span>
        <table class="striped highlight">
            <thead>
            <th>Bottle ID</th>
            <th>Expiration Date</th>
            <th>Location</th>
            </thead>
            <% for bottle in @all_bottles %>
            <tr>
                <td><%= link_to bottle.id, bottle_path(bottle) %></td>
                <td><%=bottle.expiration_date.strftime("%Y/%m/%d %I:%M %p")%></td>
                <td><%=bottle.storage_location%></td>
            </tr>
            <% end %>
        </table>
        <%= will_paginate @all_bottles, param_name: 'all_bottles_page', previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
    </div>
    </div>
</div>