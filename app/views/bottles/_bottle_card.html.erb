<div class="card">
        <div class="card-content">
            <h5><%= "Bottle for #{@bottle.patient.proper_name}" %></h5><br />
            <b>ID:&nbsp;&nbsp;</b><%= @bottle.id%><br>
            <b>Collected Date:&nbsp;&nbsp;</b><%= @bottle.collected_date.strftime("%Y/%m/%d %I:%M %p")%><br>
            <b>Expiration Date:&nbsp;&nbsp;</b><%= @bottle.expiration_date.strftime("%Y/%m/%d %I:%M %p")%><br>
            <b>Storage Method:&nbsp;&nbsp;</b><%= @bottle.storage_location%><br>
            <b>Active?&nbsp;&nbsp;</b>
            <%= @bottle.active ? "Yes" : "No" %> <br />
            <b>QR:</b><br>
            <%= image_tag (@bottle.get_qr_image), :size => "300x200", class: "img-responsive"%>
            <%= button_to reprint_bottle_path(@bottle), method: :post, data: {confirm: "Reprint label for bottle with ID #{@bottle.id}?"},class: 'waves-effect waves-light btn' do %>
                            &nbsp;<%= "Reprint label" %>
                        <% end %>
        </div>
</div>
