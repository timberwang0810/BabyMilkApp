<div class="card">    
  <div class="card-content">
   
      <div class="row">
        <%= simple_form_for :other, url: url_for(action: scan_action, :controller => 'scanbottle'), :method => scan_method do |f| %>
        <%= f.error_notification %>
        <div class="row">
            <div class="form-inputs">
            <%= f.input :bottle_id, required: true, label: 'Scan the bottle\'s QR code',label_html: { class: 'active' } %>
            </div>
        </div>
        <div class="row">
            <div class="waves-effect waves-light btn" >
            <%= f.button :submit, 'Submit'%>
            </div>
        </div>
    
        
        <% end %>
    </div>
  </div>
</div>
  
  <div class="row">
    <div class="form-actions col s7">
    </div>
  </div>