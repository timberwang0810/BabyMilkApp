<!DOCTYPE html>
<html>
  <head>
    <title>BabyMilkApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Bitter|Josefin+Sans|Nunito|Varela+Round" %>
  
  </head>

  <body>
    <%= render :partial => "partials/topbar" %>
    <%= render :partial => "partials/nav" %>
    <div id="login">
      <% if logged_in? %>
        <%= link_to 'Logout', logout_path %>
        <br>[<%= current_user.proper_name %>:<%= current_user.role %>]
      <% else %>
        <%= link_to 'Login', login_path %>
      <% end %>
		</div>
    <div class="container">
      <div class="row">
        <div class="col s12">
          <%= render :partial => "partials/flash" %>
          
          <!-- MAIN CONTENT OF TEMPLATE GOES HERE -->
          <%= yield %>

        </div>
      </div>
    </div>
    
    <%= render :partial => "partials/footer" %> 
    <%= javascript_include_tag 'application' %>  
  </body>
</html>
